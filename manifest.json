{
  "manifest_version": 2,
  "name": "Deep Dive Recorder",
  "version": "0.1",
  "description": "Records user activity with a click of a button.",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_title": "Deep Dive",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
