{
  "manifest_version": 2,
  "name": "Deep Dive",
  "version": "0.1",
  "description": "Records user activity with a click of a button.",
  "icons": {
    "128": "images/icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_title": "Deep Dive",
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css":["css/bootstrap/bootstrap.min.css", "css/popup.css"],
      "js": ["js/libs/jquery.min.js", "content_script.js"],
      "run_at": "document_end"
    }
  ]
}
